<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Configs</th>
    <th>Date created</th>
    <th>Created by</th>
    <th>Product orgid</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.product_name %></td>
    <td><%= product.product_description %></td>
    <td><%= product.product_configs %></td>
    <td><%= product.created_at %></td>
    <td><%= product.product_createdby %></td>
    <td><%= link_to product.product_orgID, :controller => "organisations", :id => product.product_orgID %></td>
    <td><%= link_to 'Show', product %><br/>
    <%= link_to 'Edit', edit_product_path(product) %><br/>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
