<h1>Listing users</h1>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Profile Name</th>
    <th>Email Address</th>
    <th></th>

  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.profile_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %><br/>
    <%= link_to 'Edit', edit_user_path(user) %><br/>
    <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

