<p id="notice"><%= notice %></p>

<div style="float:right;">
<ul>
<li>Task Created: <%= link_to @task.created_at.to_formatted_s(:short) %></li>
<% TaskActivity.where(:task_activity_task_productassignedto => @task.task_title).each do |task_activity| %>
<li>Activity added on: <%= link_to task_activity.created_at.to_formatted_s(:short), task_activity %></li>
<% end %>
</ul>
</div>
<p>
  <b>Title:</b>
  <%= @task.task_title %>
</p>

<p>
  <b>Description:</b>
  <%= @task.task_description %>
</p>

<p>
  <b>Completed:</b>
  <%= @task.task_completed %>
</p>

<p>
  <b>Completed by:</b>
  <%= @task.task_completedby %>
</p>

<p>
  <b>Assigned to:</b>
  <%= @task.task_assignedto %>
</p>

<p>
  <b>Type:</b>
  <%= @task.task_type %>
</p>

<p>
  <b>Date created:</b>
  <%= @task.created_at %>
</p>

<p>
  <b>Createdby:</b>
  <%= @task.task_createdby %>
</p>

<p>
  <b>Product assigned to:</b>
  <%= @task.task_productassignedto %>
</p>

<p>
  <b>Organisation assigned to:</b>
  <%= @task.task_orgassignedto %>
</p>

<p>
  <b>Product name:</b>
  <%= @task.task_productassignedto %>
</p>

<p>
  <b>Task ID:</b>
  <%= @task.id %>
</p>
<br/>
<h1>Listing task_activities</h1>

<table>
  <tr>
    <th>Time taken</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% TaskActivity.where(:task_activity_task_productassignedto => @task.task_title).each do |task_activity| %>
  <tr>
    <td><%= task_activity.time_taken %></td>
    <td><%= task_activity.notes %></td>
    <td><%= link_to 'Show', task_activity %></td>
    <td><%= link_to 'Edit', edit_task_activity_path(task_activity) %></td>
    <td><%= link_to 'Destroy', task_activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

